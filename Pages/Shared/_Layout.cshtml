<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-page="/Index">HRManagement</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Employees/Index">Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Reports/Payroll">Payroll Report</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Reports/TimeTracking">Time Tracking Report</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main" class="container pb-3">
        @RenderBody()
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">&copy; 2025 - HRManagement</span>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
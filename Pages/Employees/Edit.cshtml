@page "{id:int}"
@model HRManagement.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Employee.FirstName"></label>
        <input asp-for="Employee.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.LastName"></label>
        <input asp-for="Employee.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.Position"></label>
        <input asp-for="Employee.Position" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee.Salary"></label>
        <input asp-for="Employee.Salary" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
@page
@model HRManagement.Pages.Reports.TimeTrackingModel
@{
    ViewData["Title"] = "Time Tracking Report";
}

<h1>Time Tracking Report</h1>

<form method="get">
    <div class="form-group">
        <label for="employeeId">Employee ID:</label>
        <input type="number" id="employeeId" name="employeeId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Get Report</button>
</form>

@if (Model.TimeEntries != null && Model.TimeEntries.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Hours Worked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.TimeEntries)
            {
                <tr>
                    <td>@entry.Date.ToShortDateString()</td>
                    <td>@entry.HoursWorked</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.EmployeeId.HasValue)
{
    <p>No time tracking data available for Employee ID: @Model.EmployeeId</p>
}
